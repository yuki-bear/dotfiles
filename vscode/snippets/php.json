	"if inline statement": {
		"prefix": "if-inline",
		"body": [
			"<?php if ($1) : ?>",
			"$0",
    		"<?php endif; ?>"
		],
		"description": "if clause in inline statement"
	},
	"Display all errors": {
		"prefix": "display-all-errors",
		"body": [
			"ini_set('display_errors', 1);",
			"ini_set('display_startup_errors', 1);",
			"error_reporting(E_ALL);",
